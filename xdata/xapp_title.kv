#:kivy 1.9.0
#:import kivy kivy
#:import Factory kivy.factory.Factory

<XAppTitle>:
  orientation: 'vertical'
  # Program Title
  BoxLayout:
    orientation: 'horizontal'
    canvas:
      Color: 
        rgba: 0.95,0.95,0.95,1
      Rectangle:
        size: self.size
        pos: self.pos
    size_hint: None, None
    size: root.width, root.width/15 + root.width/20
    padding: root.width/30, root.width/40, root.width/30, root.width/40
    spacing: root.width/40
    RLabel:
      text_size: self.size
      size_hint: None, None
      size: root.width - root.width/15*3 - root.width/40*2, root.width/15 #root.width-(root.width/15+root.width/15*5+root.width/40*3+root.width/20), root.width/15
      halign: 'left'
      valign: 'middle'
      color: 0,0,0,1
      font_size: root.width/20
      text: '[size=%d]Ponerine.X[/size][sub] %s[/sub]' %(root.width/15,app.version)
      text: 'Ponerine.X [sub]%s[/sub]' %(app.version)
      markup: True
    Label:
      size_hint: None, None
      size: root.width/15, root.width/15
    Image:
      size_hint: None, None
      size: root.width/15, root.width/15
      source: 'ximage/logo.png'
      #background_normal: 'ximage/logo.png'
      #background_down: 'ximage/logo.png'
      #text: '%s' %self.size
      #on_release: root.parent.parent.manager.TestColor() #RefreshAllControls(self)
    # Spinner:
      # size_hint: None, None
      # size: root.width/15*5, root.width/15
      # text_size: self.size
      # halign: 'right'
      # valign: 'middle'
      # color: 0,0,1,1
      # values: ("Camera 1","Camera 2","Camera 3","Camera 4","Camera 5","Camera 6","Camera 7","Advanced")
      # background_normal: 'ximage/setting.png'
      # background_down: 'ximage/setting.png'
      # on_text: root.parent.parent.manager.ConfigPopupOpen(self, self.text)
  # Scene Name & Shot Title
  GridLayout:
    size_hint: None, None
    size: root.width, (root.width/30+root.width/37+root.width/9)
    spacing: root.width/30, 0
    padding: root.width/15, root.width/30, 0, 0 #, root.width/12, 0
    cols: 2
    DLabel:
      size_hint: None, None
      size: root.width/5*4-root.width/15-root.width/60, root.width/37
      text: 'SCENE NAME'# %d %d %d %d' %(root.width,self.width,root.width/15,root.width/30)
    DLabel:
      size_hint: None, None
      size: root.width/5-root.width/60, root.width/37
      text: 'SHOT'# %d' %self.width
  # Status & Record Time Title
  GridLayout:
    canvas:
      Color: 
        rgba: 1,1,1,0
      Rectangle:
        size: self.size
        pos: self.pos
    size_hint: None, None
    size: root.width, (root.width/30+root.width/37+root.width/5)
    spacing: root.width/30, 0 #root.width/100
    padding: root.width/15, root.width/30, 0, 0 #, root.width/12, 0
    cols: 2
    DLabel:
      size_hint: None, None
      size: (root.width-root.width/15*2)/7, root.width/37
      text: 'STATUS'
    DLabel:
      size_hint: None, None
      size: (root.width-root.width/15*2)/7*6, root.width/37
      text: 'RECORD TIME'
  #Camera Name
  GridLayout:
    canvas:
      Color: 
        rgba: 1,1,1,0
      Rectangle:
        size: self.size
        pos: self.pos
    size_hint: None, None
    size: root.width, (root.width/30+root.width/37+(root.width-root.width/15*2)/7)
    padding: root.width/15, root.width/30, root.width/15, 0 #, root.width/12, 0
    cols: 1
    DLabel:
      size_hint: None, None
      size: root.width/2, root.width/37
      text: 'CAMERA'
  #Resoluton, Frame Rate, Bit Rate, Aspect Ratio
  GridLayout:
    canvas:
      Color: 
        rgba: 1,1,1,0
      Rectangle:
        size: self.size
        pos: self.pos
    size_hint: None, None
    size: root.width, (root.width/30+root.width/37+root.width/19)
    spacing: root.width/30, 0
    padding: root.width/15, root.width/30, 0, 0 #, root.width/12, 0
    cols: 4
    DLabel:
      size_hint: None, None
      size: root.width/5*2-root.width/15-root.width/60*4, root.width/37
      text: 'RESOLUTION'
    DLabel:
      size_hint: None, None
      size: root.width/5, root.width/37
      text: 'FRAME'# %d' %self.width
    DLabel:
      size_hint: None, None
      size: root.width/5-root.width/60, root.width/37
      text: 'BITRATE'# %d' %self.width
    DLabel:
      size_hint: None, None
      size: root.width/5-root.width/60, root.width/37
      text: 'ASPECT'# %d' %self.width
  #Meter Mode, Exposure, Speed, ISO
  GridLayout:
    canvas:
      Color: 
        rgba: 1,1,1,0
      Rectangle:
        size: self.size
        pos: self.pos
    size_hint: None, None
    size: root.width, (root.width/30+root.width/37+root.width/19)
    spacing: root.width/30, 0
    padding: root.width/15, root.width/30, 0, 0 #, root.width/12, 0
    cols: 4
    DLabel:
      size_hint: None, None
      size: root.width/5*2-root.width/15-root.width/60*4, root.width/37
      text: 'METER MODE'
    DLabel:
      size_hint: None, None
      size: root.width/5, root.width/37
      text: 'EXPOSURE'# %d' %self.width
    DLabel:
      size_hint: None, None
      size: root.width/5-root.width/60, root.width/37
      text: 'SPEED'# %d' %self.width
    DLabel:
      size_hint: None, None
      size: root.width/5-root.width/60, root.width/37
      text: 'ISO'# %d' %self.width
  GridLayout:
    size_hint: 1,1
    cols: 1