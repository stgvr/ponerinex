#:kivy 1.9.0
#:import kivy kivy
#:import Factory kivy.factory.Factory

<XCamInfo>:
  #size_hint: 1,1
  #size_hint: None, None
  #size: root.width, root.width
  canvas:
    Color: 
      rgba: 1,0,0,0 #0.9,0.9,0.9,1
    Rectangle:
      size: self.size
      pos: self.pos
  rows: 6
  # Scene & Shot
  GridLayout:
    canvas:
      Color: 
        rgba: 1,1,1,0
      Rectangle:
        size: self.size
        pos: self.pos
    size_hint: None, None
    size: root.width, (root.width/6+root.width/37+root.width/9)
    spacing: root.width/30, 0
    padding: root.width/15, root.width/6+root.width/37-root.width/100, 0, 0 #, root.width/12, 0
    cols: 2
    RLabel:
      name: 'scenename'
      size_hint: None, None
      size: root.width/5*4-root.width/15-root.width/60, root.width/9+root.width/100
      font_size: root.width/10
      text: 'PonerineX' #%(self.height,root.width/9)
    RLabel:
      name: 'sceneshot'
      size_hint: None, None
      size: root.width/5-root.width/60, root.width/9+root.width/100
      font_size: root.width/10
      text: '01' # %d' %root.width
  #Record Time
  GridLayout:
    canvas:
      Color: 
        rgba: 1,0,0,0
      Rectangle:
        size: self.size
        pos: self.pos
    size_hint: None, None
    size: root.width, (root.width/30+root.width/37+root.width/5)
    spacing: root.width/30, 0 #root.width/100
    padding: root.width/15, root.width/30+root.width/37-root.width/100, 0, 0 #, root.width/12, 0
    cols: 2
    RLabel:
      name: 'status'
      size_hint: None, None
      size: (root.width-root.width/15*2)/7,root.width/5+root.width/100
      font_size: root.width/22
      valign: 'middle'
      halign: 'left'
      text: 'REC\n'
    RLabel:
      name: 'recordtime'
      size_hint: None, None
      size: (root.width-root.width/15*2)/7*6,root.width/5+root.width/100
      font_size: root.width/6+root.width/40
      text: '00:00:00' #'00:00:01'
  #Camera Status
  GridLayout:
    canvas:
      Color: 
        rgba: 1,1,1,0
      Rectangle:
        size: self.size
        pos: self.pos
    size_hint: None, None
    size: root.width, (root.width/30+root.width/37+(root.width-root.width/15*2)/7)
    padding: root.width/15, root.width/30+root.width/37, root.width/15, 0 #, root.width/12, 0
    cols: 7
    CLabel:
      text: 'A'
    CLabel:
      text: 'B'
    CLabel:
      text: 'C'
    CLabel:
      text: 'D'
    CLabel:
      text: 'E'
    CLabel:
      text: 'F'
    CLabel:
      text: 'G'
  #Resoluton, Frame Rate, Bit Rate, Aspect Ratio
  GridLayout:
    canvas:
      Color: 
        rgba: 1,1,1,0
      Rectangle:
        size: self.size
        pos: self.pos
    size_hint: None, None
    size: root.width, (root.width/30+root.width/37+root.width/19)
    spacing: root.width/30, 0
    padding: root.width/15, root.width/30+root.width/37-root.width/100, 0, 0 #, root.width/12, 0
    cols: 4
    RLabel:
      name: 'resolution'
      size_hint: None, None
      size: root.width/5*2-root.width/15-root.width/60*4, root.width/19+root.width/100
      font_size: root.width/22
      text: '1600x1200'
    RLabel:
      name: 'frame'
      size_hint: None, None
      size: root.width/5, root.width/19+root.width/100
      font_size: root.width/22
      text: '60fps'
    RLabel:
      name: 'bitrate'
      size_hint: None, None
      size: root.width/5-root.width/60, root.width/19+root.width/100
      font_size: root.width/22
      text: '35M'
    RLabel:
      name: 'aspect'
      size_hint: None, None
      size: root.width/5-root.width/60, root.width/19+root.width/100
      font_size: root.width/22
      text: '4:3'
  #Meter Mode, Exposure, Speed, ISO
  GridLayout:
    canvas:
      Color: 
        rgba: 1,1,1,0
      Rectangle:
        size: self.size
        pos: self.pos
    size_hint: None, None
    size: root.width, (root.width/30+root.width/37+root.width/19)
    spacing: root.width/30, 0
    padding: root.width/15, root.width/30+root.width/37-root.width/100, 0, 0 #, root.width/12, 0
    cols: 4
    RLabel:
      name: 'metermode'
      size_hint: None, None
      size: root.width/5*2-root.width/15-root.width/60*4, root.width/19+root.width/100
      font_size: root.width/22
      text: 'Average'
    RLabel:
      name: 'exposure'
      size_hint: None, None
      size: root.width/5, root.width/19+root.width/100
      font_size: root.width/22
      text: 'Auto' #'A.Sync' #'Manual'
    RLabel:
      name: 'shutter'
      size_hint: None, None
      size: root.width/5-root.width/60, root.width/19+root.width/100
      font_size: root.width/22
      text: '1/60s'
    RLabel:
      name: 'iso'
      size_hint: None, None
      size: root.width/5-root.width/60, root.width/19+root.width/100
      font_size: root.width/22
      text: '800'
