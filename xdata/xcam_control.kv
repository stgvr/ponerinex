#:kivy 1.9.0
#:import kivy kivy
#:import Factory kivy.factory.Factory

<XCamControl>:
  orientation: 'vertical'
  # Camera Control Buttons
  GridLayout:
    size_hint: None, None
    size: root.width, (root.width/30+root.width/15+(root.width-root.width/15*2)/3)
    spacing: 0, 0
    padding: root.width/15, root.width/30, root.width/15, root.width/15
    cols: 3
    #LSpinner:
      #values: ("Camera 1","Camera 2","Camera 3","Camera 4","Camera 5","Camera 6","Camera 7","Advanced")
    Button:
      always_release: False
      disabled: False
      #color: 1,1,1,1
      #disabled_color: 0.25,0.25,0.25,1
      size_hint: 1, 1
      #size: (root.parent.width-root.parent.width/15*2)/3,(root.parent.width-root.parent.width/15*2)/3
      background_normal: 'ximage/left_normal.png'
      background_down: 'ximage/left_down.png'
      background_disabled_normal: 'ximage/left_disable.png'
    RECButton:
      size_hint: 1, 1
      text: 'RECORD' #'%s' %self.font_size
      disabled: True
      #on_release: root.parent.parent.manager.TestColor()
    Button:
      always_release: False
      disabled: True
      #color: 1,1,1,1
      #disabled_color: 0.25,0.25,0.25,1
      size_hint: 1, 1
      #size: (root.parent.width-root.parent.width/15*2)/3,(root.parent.width-root.parent.width/15*2)/3
      background_normal: 'ximage/right_normal.png'
      background_down: 'ximage/right_down.png'
      background_disabled_normal: 'ximage/right_disable.png'
    # RSpinner:
      # size_hint: 1, 1
      # values: ("Metering", "M.Exposure") #"Option 1","Option 2","Option 3","Option 4","Option 5","Option 6","Option 7"
      # disabled: True
