#:kivy 1.9.0
#:import kivy kivy
#:import Factory kivy.factory.Factory

<XCamControl>:
  orientation: 'vertical'
  # Camera Control Buttons
  GridLayout:
    size_hint: None, None
    size: root.width, (root.width/30+root.width/15+(root.width-root.width/15*2)/3)
    spacing: 0, 0
    padding: root.width/15, root.width/30, root.width/15, root.width/15
    cols: 3
    Spinner:
      color: 1,1,1,1
      disabled_color: 0.25,0.25,0.25,1
      size_hint: None, None
      size: (root.width-root.width/15*2)/3,(root.width-root.width/15*2)/3
      text: '<'
      font_name: 'Roboto-Thin'
      font_size: root.width/15
      values: ("Camera 1","Camera 2","Camera 3","Camera 4","Camera 5","Camera 6","Camera 7","Advanced")
      background_normal: 'ximage/circle_normal.png'
      background_down: 'ximage/circle_down.png'
    Button:
      color: 1,1,1,1
      disabled_color: 0.25,0.25,0.25,1
      size_hint: None, None
      size: (root.width-root.width/15*2)/3,(root.width-root.width/15*2)/3
      text: 'RECORD'
      font_name: 'Roboto-Thin'
      font_size: root.width/30
      background_normal: 'ximage/circle_down.png'
      background_down: 'ximage/circle_normal.png'
      background_disabled_normal: 'ximage/circle_normal.png'
      disabled: True
      #on_release: root.parent.parent.manager.TestColor()
    Spinner:
      color: 1,1,1,1
      disabled_color: 0.25,0.25,0.25,1
      size_hint: None, None
      size: (root.width-root.width/15*2)/3,(root.width-root.width/15*2)/3
      text: '>'
      font_name: 'Roboto-Thin'
      font_size: root.width/15
      values: ("Metering", "M.Exposure") #"Option 1","Option 2","Option 3","Option 4","Option 5","Option 6","Option 7"
      background_normal: 'ximage/circle_normal.png'
      background_down: 'ximage/circle_down.png'
      background_disabled_normal: 'ximage/circle_normal.png'
      disabled: True
